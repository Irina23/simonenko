doctype html
html(lang="ru")
    head
        link(href="/css/main.css" rel="stylesheet" type="text/css")
        link(href="bower_components/normalize-css/normalize.css" rel="stylesheet" type="text/css")
        link(href="/css/owl.carousel.css" rel="stylesheet" type="text/css")
        link(href="/css/template.css" rel="stylesheet" type="text/css")
        script(src="bower_components/jquery/dist/jquery.js")
        script(src="/js/owl.carousel.js")
        script(src="/js/untils.js")


    body
        .page_wrapper
            include ./header.jade

            div.container
                .wrap

                    form.payment
                        h3 Оплата

                        .radio.cf

                            div
                                input(type="radio", name="payment", value="visa", id="visa",checked="")
                                label(for="visa") VISA
                            div
                                input(type="radio", name="payment", value="privat24",id="privat24")
                                label(for="privat24") Privat24
                            div
                                input(type="radio", name="payment", value="mastercard" id="mastercard")
                                label(for="mastercard") Mastercard

                            div
                                input(type="radio", name="payment", value="paypal", id="paypal")
                                label(for="paypal") PayPal


                            div
                                input(type="radio", name="payment", value="novaposhta", id="novaposhta")
                                label(for="novaposhta") Наложный платеж “Новая почта”



                        h3 Доставка
                        .radio.cf
                            div
                                input(type="radio", name="delivery", value="courier", id="courier", checked="")
                                label(for="courier") Курьером по г. Черкассы

                            div
                                input(type="radio", name="delivery", value="novaposhta2" id="novaposhta2")
                                label(for="novaposhta2")  Новая почта (наложный платеж)


                        h3 Контактная информация
                        input(type="text", placeholder="Имя:")
                        input(type="text", placeholder="Фамилия:")
                        input(type="text", placeholder="Страна:")
                        input(type="text", placeholder="Город:")
                        input(type="text", placeholder="Улица:")
                        input(type="text", placeholder="Email:")
                        input(type="submit", name="Отправить")







            include ./footer.jade