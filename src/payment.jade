doctype html
html(lang="ru")
    head
        link(href="/css/main.css" rel="stylesheet" type="text/css")
        link(href="bower_components/normalize-css/normalize.css" rel="stylesheet" type="text/css")
        link(href="/css/owl.carousel.css" rel="stylesheet" type="text/css")
        link(href="/css/template.css" rel="stylesheet" type="text/css")
        script(src="bower_components/jquery/dist/jquery.js")
        script(src="/js/owl.carousel.js")
        script(src="/js/untils.js")
        script(src="/js/bootstrap_tabs.min.js")
        script(src="/js/alexValidate.js")


    body
        .page_wrapper
            include ./header.jade

            div.container
                .wrap

                    form.payment
                        h3 Оплата

                        .radio.cf

                            div
                                input(type="radio", name="payment", value="visa", id="visa",checked="")
                                label(for="visa") VISA
                            div
                                input(type="radio", name="payment", value="privat24",id="privat24")
                                label(for="privat24") Privat24
                            div
                                input(type="radio", name="payment", value="mastercard" id="mastercard")
                                label(for="mastercard") Mastercard

                            div
                                input(type="radio", name="payment", value="paypal", id="paypal")
                                label(for="paypal") PayPal


                            div
                                input(type="radio", name="payment", value="novaposhta", id="novaposhta")
                                label(for="novaposhta") Наложный платеж “Новая почта”



                        h3 Доставка
                        .radio.cf

                            div
                                input(type="radio", name="delivery", value="courier", id="courier", checked="")
                                label(for="courier") Курьером по г. Черкассы

                            div
                                input(type="radio", name="delivery", value="novaposhta2" id="novaposhta2")
                                label(for="novaposhta2")  Новая почта (наложный платеж)


                        h3 Контактная информация
                        .row-form
                            div
                                input(type="text", placeholder="Имя:", name="name", minlength="2", data-validate="name")
                                span.error Поле обязательное для заполнения
                            div
                                input(type="text", placeholder="Фамилия:", name="surname", minlength="2", data-validate="name")
                                span.error Поле обязательное для заполнения
                        .row-form
                            div
                                input(type="text", placeholder="Страна:", name="country", data-validate="name")
                                span.error Поле обязательное для заполнения
                            div
                                input(type="text", placeholder="Город:",name="city", data-validate="name")
                                span.error Поле обязательное для заполнения
                        .row-form
                            div
                                input(type="text", placeholder="Улица:", name="street", data-validate="name")
                                span.error Поле обязательное для заполнения
                            div
                                input(type="text", placeholder="Дом:",name="number", data-validate="number")
                                span.error Поле обязательное для заполнения
                        .row-form
                            div
                                input(type="text", placeholder="Телефон:", name="phone", data-validate="phone")
                                span.error Поле обязательное для заполнения
                            div
                                input(type="email", placeholder="Email:", name="email", data-validate="email")
                                span.error Поле обязательное для заполнения
                        button(type="submit")  Отправить







            include ./footer.jade